<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">

                <include
                    android:id="@+id/header1"
                    layout="@layout/header_layout" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="34dp"
                android:background="@drawable/red_grad"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp">

                <com.fitpass.libfitpass.fontcomponent.FontAwesome
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="54dp" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/fp_register_ic"
                    android:layout_marginTop="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="296dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/white_shape3">

                    <ImageView
                        android:id="@+id/qrCodeImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/white_shape"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/gym_logo_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">

                        <TextView
                            android:id="@+id/studio_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spf_pro_display_bold"
                            android:includeFontPadding="false"
                            android:text="Gold's Gym"
                            android:textColor="@color/black1"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/address_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2.5dp"
                            android:fontFamily="@font/spf_prodisplay_regular"
                            android:includeFontPadding="false"
                            android:text="Malviya Nagar,Delhi"
                            android:textSize="12sp"
                            android:textColor="@color/black1"/>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:id="@+id/llWorkoutImage"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/white_shape3"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:adjustViewBounds="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/llWorkoutImage"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/tvWorkoutname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spf_pro_display_bold"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="2sp"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            tools:text="Gym Workout" />

                        <TextView
                            android:id="@+id/tvWorkoutdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/spf_prodisplay_regular"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            tools:text="06 Aug, 06:30 pm" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical">

                        <com.fitpass.libfitpass.fontcomponent.FontAwesome
                            android:id="@+id/faHelp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="26dp"></com.fitpass.libfitpass.fontcomponent.FontAwesome>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sf_pro_display_semi_bold"
                            android:text="@string/needhelp"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</layout>